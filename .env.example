# Core target settings
TEST_URL=https://manage-case.aat.platform.hmcts.net/
TEST_ENV=aat

# IDAM / S2S (populate from Azure Key Vault)
IDAM_WEB_URL=
IDAM_TESTING_SUPPORT_URL=
IDAM_CLIENT_ID=xuiwebapp
IDAM_SECRET=
IDAM_OAUTH2_SCOPE=openid profile roles manage-user search-user
IDAM_RETURN_URL=${TEST_URL}oauth2/callback
S2S_URL=
S2S_MICROSERVICE_NAME=xui_webapp

# API auth mode (token|form)
API_AUTH_MODE=token
API_AUTO_XSRF=false

# User credentials (per env)
SOLICITOR_USERNAME=
SOLICITOR_PASSWORD=
API_USER_CASEOFFICER_R1_USERNAME=
API_USER_CASEOFFICER_R1_PASSWORD=
API_USER_CASEOFFICER_R2_USERNAME=
API_USER_CASEOFFICER_R2_PASSWORD=

# Sample IDs (optional; can be seeded dynamically)
WA_SAMPLE_TASK_ID=
WA_SAMPLE_ASSIGNED_TASK_ID=
ROLE_ACCESS_CASE_ID=1234567890123456
EM_DOC_ID=

