{
  "name": "rpx-xui-e2e-tests",
  "version": "0.1.0",
  "description": "Playwright smoke/regression tests for RPX Expert UI",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.9.0"
  },
  "packageManager": "yarn@4.11.0",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "playwright install",
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint \"{config,fixtures,page-objects,tests,utils}/**/*.ts\" --max-warnings=0",
    "lint:fix": "eslint \"{config,fixtures,page-objects,tests,utils}/**/*.ts\" --max-warnings=0 --fix",
    "format": "prettier \"**/*.{ts,tsx,js,json,md,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,json,md,yml,yaml}\" --check",
    "test": "playwright test",
    "test:api": "playwright test --project=api",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test tests/regression --grep @regression",
    "test:a11y": "playwright test tests/accessibility --grep @a11y",
    "test:perf": "playwright test tests/performance --grep @performance --project=chromium",
    "test:headed": "PWDEBUG=1 playwright test --headed --project=chrome",
    "test:ui": "playwright test --ui",
    "verify": "yarn lint && yarn format:check && yarn test --reporter=list",
    "scan:secrets": "node scripts/secret-scan.js",
    "auth:generate-storage": "USE_STORAGE_STATE=1 node --loader ts-node/esm scripts/generate-storage-state.ts",
    "check:flake": "node scripts/check-flake-budget.js",
    "test:api:coverage": "PW_ODHIN_OUTPUT=${PW_ODHIN_OUTPUT:-test-results/odhin-report} PLAYWRIGHT_REPORTERS=dot,odhin PLAYWRIGHT_ODHIN=1 PW_ODHIN_START_SERVER=0 PLAYWRIGHT_HTML=0 PLAYWRIGHT_JSON_OUTPUT=test-results/json/api.json bash -c 'set -o pipefail; EXIT=0; c8 -o coverage/api --reporter=lcov --reporter=text-summary --reporter=json-summary playwright test --project=api --grep @api || EXIT=$?; mkdir -p '\"'\"'$PW_ODHIN_OUTPUT'\"'\"' && cp coverage/api/coverage-summary.json '\"'\"'$PW_ODHIN_OUTPUT'\"'\"'/coverage-summary.json || true; node scripts/copy-odhin-report.cjs || true; exit $EXIT'"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --max-warnings=0",
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@hmcts/playwright-common": "^1.0.39",
    "dotenv": "^16.4.5",
    "get-port": "^7.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "c8": "^9.1.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-playwright": "^2.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "odhin-reports-playwright": "1.1.8",
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
