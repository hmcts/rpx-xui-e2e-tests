{
  "name": "rpx-xui-e2e-tests",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "setup": "yarn playwright install --with-deps",
    "lint": "yarn tsc -p tsconfig.json && yarn eslint .",
    "lint:fix": "yarn eslint . --fix",
    "test:all": "yarn playwright test",
    "test:smoke": "yarn playwright test src/tests --project=chromium --grep @smoke",
    "test:regression": "yarn playwright test src/tests --project=chromium --grep @regression",
    "test:api": "yarn playwright test src/tests/api --project=api",
    "test:a11y": "yarn playwright test src/tests --project=chromium --grep @accessibility",
    "test:visual": "yarn playwright test src/tests --project=chromium --grep @visual",
    "test:coverage": "c8 --reporter=text --reporter=lcov --report-dir ./reports/tests/coverage/api-playwright sh -c \"yarn vitest run && yarn playwright test\"",
    "test:unit": "vitest run",
    "test:api:odhin": "PLAYWRIGHT_REPORT_FOLDER=test-results/odhin-report yarn playwright test src/tests/api --project=api && node ./scripts/copy-odhin-report.cjs",
    "test:api:odhin:coverage": "rm -rf test-results/odhin-report functional-output/tests/playwright-api/odhin-report reports/tests/coverage/api-playwright && PW_ODHIN_LINK_COVERAGE=true PLAYWRIGHT_REPORT_FOLDER=test-results/odhin-report c8 --reporter=lcov --reporter=json-summary --reporter=text --reporter=text-summary --reporter=html --report-dir ./reports/tests/coverage/api-playwright sh -c \"yarn vitest run && yarn playwright test src/tests/api --project=api\" && PW_ODHIN_LINK_COVERAGE=true node ./scripts/copy-odhin-report.cjs"
  },
  "devDependencies": {
    "@angular/cdk": "^21.0.3",
    "@angular/common": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/material": "^21.0.3",
    "@angular/platform-browser": "^21.0.5",
    "@axe-core/playwright": "^4.10.1",
    "@eslint/js": "^9.11.1",
    "@faker-js/faker": "^10.1.0",
    "@hmcts/playwright-common": "^1.0.39",
    "@playwright/test": "^1.57.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.19.3",
    "c8": "^10.1.2",
    "dotenv": "^17.0.0",
    "eslint": "^9.11.1",
    "eslint-plugin-playwright": "^2.2.0",
    "get-port": "^7.1.0",
    "lodash": "^4.17.21",
    "odhin-reports-playwright": "^1.1.8",
    "playwright": "^1.57.0",
    "prettier": "^3.3.3",
    "rxjs": "^7.8.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0",
    "uuid": "^11.1.0",
    "vitest": "^4.0.15",
    "winston": "^3.17.0"
  }
}
